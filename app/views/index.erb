<div class="container">
<% if @error %>
  <%= @error %>
<% end %>
<div id = "sign-in">
<h1>Sign In</h1>
  <form id="sign-in" method="post" action="/sessions">
    Email:<input type = "text" name = "email">
    Password: <input type="password" name="password" placeholder="6 or more characters">
    <br>
    <div class="submit"><input type="submit" value="Sign In"></div>
  </form>
</div>

<div id="sign-up">
<h1>Sign up</h1>
  <form id="sign-up" method="post" action="/profile">
    <label class="label" for="name">Name</label>
    <input type="text" name="name" >

    <br>

    <label class="label" for="email">Email</label>
    <input type="email" name="email">

    <br>

    <label class="label" for="password">Password</label>
    <input type="password" name="password" >

    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>
</div>
</div>
